{
    "$id": "https://example.com/address.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "An address similar to http://microformats.org/wiki/h-card",
    "type": "object",
    "properties": {
        "post-office-box": {
            "type": "string"
        },
        "extended-address": {
            "type": "string"
        },
        "street-address": {
            "type": "string"
        },
        "locality": {
            "type": "string"
        },
        "zip-code": {
            "type": "integer"
        }
    },
    "required": [
        "locality",
        "zip-code",
        "country-name"
    ],
    "dependentRequired": {
        "post-office-box": [
            "street-address"
        ],
        "extended-address": [
            "street-address"
        ]
    }
}